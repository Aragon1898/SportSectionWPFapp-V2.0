<Window x:Class="SportSectionWPF2.View.Windows.WindowForAdminView.AddMemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportSectionWPF2.View.Windows.WindowForAdminView"
        mc:Ignorable="d"
        Title="AddMemberWindow" Height="260" Width="424"
        ResizeMode="NoResize">
    <Canvas Margin="0,0,19,0">
        <Button Margin="15"
                Content="Вернуться"
                Foreground="White"
                Background="Green"
                Click="CloseWindowButton_Click"/>

        <Label Content="Имя(логин)"
        Margin="10,50"/>

        <TextBox x:Name="NameTextBox"
     Margin="90,55"
          Width="100"/>

        <Label Content="Пароль"
         Margin="10,80"/>

        <TextBox x:Name="PasswordTextBox"
          Margin="70,85"
          Width="120"/>

        <Label Content="E-mail"
  Margin="10,110"/>

        <TextBox x:Name="EmailTextBox"
          Margin="60,115"
          Width="130"/>

        <Button
            Margin="125,150"
            Width="60"
            Content="Добавить"
             Foreground="White"
 Background="Green"
            Click="AddButton_Click"/>

        <ListBox x:Name="AllMembersListBox"
            Height="158" Width="173" 
            Canvas.Left="222" Canvas.Top="25"
            HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Button
            Width="60"
            Content="Выбрать"
            Foreground="White"
            Background="Green"
            Click="ChooseExistedButton_Click" Canvas.Left="278" Canvas.Top="188"/>

    </Canvas>
</Window>
