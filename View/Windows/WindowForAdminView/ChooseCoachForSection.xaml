<Window x:Class="SportSectionWPF2.View.Windows.WindowForAdminView.ChooseCoachForSection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportSectionWPF2.View.Windows.WindowForAdminView"
        mc:Ignorable="d"
        Title="ChooseCoachForSection" Height="350" Width="450"
        ResizeMode="NoResize">
    <Canvas>
        <ListBox x:Name="CoachesListBox"
                 Margin="210,10"
                 Width="180"
                 Height="230"/>

        <Button Content="Выбрать тренера"
         Margin="255,250"
                Width="100"
                Foreground="White"
                Background="Green"
                Click="ChooseCoachButton_Click"/>

        <Button Content="Добавить тренера"
                 Margin="50,150"
                Foreground="White"
                Background="Green"
                Click="AddCoachButton_Click"/>
        
       
        
        <Button Content="Вернуться"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10"
                Background="Green"
                Foreground="White"
                Click="CloseWindowButton_Click"/>
        
        <Label Content="Имя(логин)"
               Margin="10,50"/>

        <TextBox x:Name="NameTextBox"
            Margin="90,55"
                 Width="100"/>

        <Label Content="Пароль"
                Margin="10,80"/>

        <TextBox x:Name="PasswordTextBox"
                 Margin="70,85"
                 Width="120"/>

        <Label Content="E-mail"
         Margin="10,110"/>

        <TextBox x:Name="EmailTextBox"
                 Margin="60,115"
                 Width="130"/>

    </Canvas>
</Window>
