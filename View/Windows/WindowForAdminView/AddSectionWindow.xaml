<Window x:Class="SportSectionWPF2.View.Windows.WindowForAdminView.AddSectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportSectionWPF2.View.Windows.WindowForAdminView"
        mc:Ignorable="d"
        Title="AddSectionWindow" Height="120" Width="350"
        MinHeight="140" MinWidth="400"
        ResizeMode="NoResize">
    <Grid>

        <Canvas>
            <TextBlock Text="Введите название секции: " Margin="40"/>

            <TextBox x:Name="SectionNameTextBox"
          VerticalAlignment="Top" Margin="190,40,0,0"
          Width="120"/>

            <Button Content="Добавить"
         HorizontalAlignment="Right"
         Width="100" Height="25"
         Margin="210,70,0,0"
         Background="Green"
         Foreground="White" Click="AddSectionButton_Click"
         />

            <Button Content="Вернуться"
         HorizontalAlignment="Left" VerticalAlignment="Top"
         Margin="10,5,0,0"
         Background="Green"
         Foreground="White" Click="CloseWindowButton_Click"/>
        </Canvas>
       
    </Grid>
</Window>
