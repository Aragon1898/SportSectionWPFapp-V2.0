<Window x:Class="SportSectionWPF2.View.Windows.AdminViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportSectionWPF2.View.Windows"
        mc:Ignorable="d"
        Title="AdminViewWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="293"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель: Список секций -->
        <DockPanel Grid.Column="0" Margin="10,10,10,10">
            <!-- Панель управления секциями -->
            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                <Label Content="Список секций:"
                FontWeight="Bold"
                Padding="0,0,0,5"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Добавить" 
                     Width="80"
                     Margin="0,0,5,0"
                     Background="#FF4CAF50"
                     Foreground="White"
					 Click="AddSectionButton_Click"/>

                    <Button Content="Удалить" 
                     Width="80"
                     Background="#FFF44336"
                     Foreground="White"
                     Click="DeleteSEctionButton_Click"/>
                </StackPanel>
            </StackPanel>


            <ListBox x:Name="SectionsList"
              DisplayMemberPath="name"
              BorderThickness="0"
              SelectionChanged="SectionsList_SelectionChanged"/>

        </DockPanel>

        <TextBlock x:Name="WarrningTextBlock"
            Grid.Column="1"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="ВЫБРИТЕ СЕКЦИЮ!" FontSize="40"
                   Foreground="Red"/>
        <!-- Правая панель: Детали секции -->
        <Border x:Name="RightAppGrid" Visibility="Hidden" d:Visibility="Visible" IsEnabled="False"
            Grid.Column="1" 
            Margin="10,10,10,10"
            Padding="15"
            BorderBrush="#DDDDDD"
            BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Блок с расписанием -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <DockPanel>
                        <Label Name="SchedualLabel" Content="Расписание занятий:"
                        FontWeight="SemiBold"
                        Padding="0,0,0,5"
                        DockPanel.Dock="Left"/>

                        <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right">
                            
                            <Button Content="Изменить" 
                             Width="80"
                             Margin="5,0"
                             Background="#2196F3"
                             Foreground="White"
                             Click="AddScheduleButton_Click"/>

                            <Button Content="Удалить" 
                             Width="80"
                             Background="#FFF44336"
                             Foreground="White"
                             Click="DeleteButton_Click"/>
                        </StackPanel>
                    </DockPanel>

                    <StackPanel Orientation="Horizontal"
                         DockPanel.Dock="Right">
                        <ListBox Name="ScheduleList_training_type"
                          DisplayMemberPath="training_type"
                          BorderThickness="0"/>
                        <ListBox Name="ScheduleList_training_date"
                          DisplayMemberPath="training_date"
                          BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Блок с тренером -->
                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <DockPanel>
                        <Label Name="SectionCoachLabel"
                               Content="Тренер секции:"
                        FontWeight="SemiBold"
                        Padding="0,0,0,5"
                        DockPanel.Dock="Left"/>

                        <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right">
                            <Button Content="Назначить" 
                             Width="80"
                             Margin="5,0"
                             Background="#2196F3"
                             Foreground="White" Click="ChooseCoachButton_Click"/>

                            <Button Content="Удалить" 
                             Width="80"
                             Background="#FFF44336"
                             Foreground="White"
                                    Click="CoachDeleteButton_Click"/>

                        </StackPanel>
                    </DockPanel>

                    <ListBox Name="CoacheList"
                      DisplayMemberPath="name"
                      BorderThickness="0"/>
                </StackPanel>

                <!-- Блок с участниками -->
                <StackPanel Grid.Row="2">
                    <DockPanel Margin="0,0,0,10">
                        <Label Content="Участники секции:"
                        FontWeight="SemiBold"
                        Padding="0,0,0,5"
                        DockPanel.Dock="Left"/>

                        <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right">
                            <Button Content="Добавить" 
                             Width="80"
                             Margin="5,0"
                             Background="#FF4CAF50"
                             Foreground="White"
                                    Click="AddMemberButton_Click"/>

                            <Button Content="Удалить" 
                             Width="80"
                             Background="#FFF44336"
                             Foreground="White"
                                    Click="DeleteMemberButton_Click"/>
                        </StackPanel>
                    </DockPanel>

                    <ListBox Name="MemberList"
                      DisplayMemberPath="name"
                      BorderThickness="0"/>

                    <ItemsControl ItemsSource="{Binding Members}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,5" 
                                 Padding="10"
                                 BorderBrush="#EEEEEE"
                                 BorderThickness="0,0,0,1">
                                    <StackPanel>
                                        <!-- Заголовок участника с кнопками -->
                                        <DockPanel>
                                            <Label Content="{Binding FullName}"
                                            FontSize="14"
                                            Padding="0,0,0,5"
                                            FontWeight="DemiBold"
                                            DockPanel.Dock="Left"/>

                                            <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Right"
                                                DockPanel.Dock="Right">
                                                <Button Content="Изменить" 
                                                 Width="70"
                                                 Margin="2"
                                                 Background="#2196F3"
                                                 Foreground="White"/>
                                                <Button Content="Удалить" 
                                                 Width="70"
                                                 Margin="2"
                                                 Background="#FFF44336"
                                                 Foreground="White"/>
                                            </StackPanel>
                                        </DockPanel>

                                        <!-- Посещаемость -->
                                        <Label Content="История посещаемости:"
                                        Margin="0,5,0,2"
                                        Foreground="#666666"/>

                                        <Expander IsExpanded="False"
                                           Margin="0,5">
                                            <!-- ... существующий контент ... -->
                                        </Expander>

                                        <!-- Достижения -->
                                        <Label Content="Список достижений:"
                                        Margin="0,10,0,2"
                                        Foreground="#666666"/>

                                        <Expander IsExpanded="False"
                                           Margin="0,5">
                                            <!-- ... существующий контент ... -->
                                        </Expander>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                </StackPanel>


                <StackPanel Grid.Row="3">
                    <DataGrid x:Name="MembersDataGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                              Margin="0,25">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Имя(логин)" Binding="{Binding User.Name}" Width="*"/>
                            <DataGridTextColumn Header="Пароль" Binding="{Binding User.Password}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
               
                
                
            </Grid>
        </Border>
    </Grid>
</Window>
