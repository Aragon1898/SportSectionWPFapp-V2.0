<Window x:Class="SportSectionWPF2.View.Windows.WIndowForMember"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportSectionWPF2.View.Windows"
        mc:Ignorable="d"
        Title="WIndowForMember" Height="300" Width="459"
        ResizeMode="NoResize">
    <Canvas>
        <Button Margin="15" Content="Вернуться"
                Foreground="White"
                Background="Green"
                Click="CloseWindowButton_Click"/>

        <Label Content="Название соревнования" Canvas.Left="127" Canvas.Top="39"/>
        <TextBox Margin="50,70"
                 Width="300"
                 Name="NameCompetion"/>
        <TextBox/>

        <Button Content="Добавить"
                 Foreground="White"
 Background="Green"
                Click="AddButton_Click" Canvas.Left="293" Canvas.Top="226" RenderTransformOrigin="0.464,1.365"/>
        <Label Content="Полученные очки"
               Canvas.Left="145" Canvas.Top="99" RenderTransformOrigin="0.516,3.02" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="PointsTextBox"
            Width="300" Canvas.Left="50" Canvas.Top="130" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Content="Полученные награды"
            Canvas.Left="126" Canvas.Top="153" RenderTransformOrigin="0.516,3.02" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="AwardsTextBox"
            Width="300" Canvas.Left="50" Canvas.Top="181" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Canvas>
</Window>
